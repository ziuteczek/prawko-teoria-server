{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  }
}
